<Window x:Class="Russkyc.ModernControls.WPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Russkyc.ModernControls.WPF.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:moderncontrols="clr-namespace:org.russkyc.moderncontrols;assembly=Russkyc.ModernControls.WPF"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="125" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <moderncontrols:ModernTextBox Grid.Row="0"
                                      Grid.Column="0"
                                      Placeholder="Text Here" />
        <moderncontrols:ModernButton Grid.Row="0"
                                     Grid.Column="1"
                                     Content="Hello"
                                     FontWeight="Bold" />
        <moderncontrols:ModernTextBox Grid.Row="1"
                                      Grid.Column="0"
                                      Placeholder="Text Here Placeholder" />
        <moderncontrols:ModernButton Grid.Row="1"
                                     Grid.Column="1"
                                     Content="Hello"
                                     FontWeight="Medium" />
        <moderncontrols:ModernComboBox Grid.Row="2"
                                       Grid.Column="0"
                                       Placeholder="Select Item"
                                       SelectedIndex="0">
            <ComboBoxItem>Tasgasgsg</ComboBoxItem>
            <ComboBoxItem>Tasga2sgsg</ComboBoxItem>
            <ComboBoxItem>Tas4gasgsg</ComboBoxItem>
            <ComboBoxItem>Tasgtasgsg</ComboBoxItem>
        </moderncontrols:ModernComboBox>
        <moderncontrols:ModernRadio Grid.Row="2"
                                    Grid.Column="1"
                                    Content="Hello Radio"
                                    FontWeight="Bold" />
        <moderncontrols:ModernRadio Grid.Row="3"
                                    Grid.Column="1"
                                    Content="Hello Radio" />
        <moderncontrols:ModernRadioButton Grid.Row="4"
                                          Grid.Column="1"
                                          Content="Hello Radio" />
        <moderncontrols:ModernRadioButton Grid.Row="5"
                                          Grid.Column="1"
                                          Content="Hello Radio"
                                          FontWeight="DemiBold" />
        <moderncontrols:ModernToggleButton Grid.Row="6"
                                           Grid.Column="1"
                                           Content="Hello Radio"
                                           FontWeight="DemiBold" />
    </Grid>
</Window>
