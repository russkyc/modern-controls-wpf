                                                                <DrawingGroup>
                                                                    <DrawingGroup.Transform>
                                                                        <MatrixTransform Matrix="1,0,0,1,85.0184,86.8055" />
                                                                    </DrawingGroup.Transform>
                                                                    <DrawingGroup>
                                                                        <DrawingGroup.Transform>
                                                                            <MatrixTransform Matrix="1,0,0,1,-85.0184,-86.8055" />
