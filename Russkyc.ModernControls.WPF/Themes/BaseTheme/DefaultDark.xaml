<!--  ModernControls Default Dark Theme  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Background  -->
    <SolidColorBrush x:Key="bg-000" Color="#0c0c0c" />
    <SolidColorBrush x:Key="bg-100" Color="#1a1a1a" />
    <SolidColorBrush x:Key="bg-200" Color="#282828" />
    <SolidColorBrush x:Key="bg-300" Color="#363636" />
    <SolidColorBrush x:Key="bg-400" Color="#444444" />
    <SolidColorBrush x:Key="bg-500" Color="#525252" />
    <SolidColorBrush x:Key="bg-600" Color="#606060" />

    <!--  Foreground  -->
    <SolidColorBrush x:Key="fg-000" Color="#f2f2f2" />
    <SolidColorBrush x:Key="fg-100" Color="#e5e5e5" />
    <SolidColorBrush x:Key="fg-200" Color="#d9d9d9" />
    <SolidColorBrush x:Key="fg-300" Color="#cccccc" />
    <SolidColorBrush x:Key="fg-400" Color="#bfbfbf" />
    <SolidColorBrush x:Key="fg-500" Color="#b2b2b2" />
    <SolidColorBrush x:Key="fg-600" Color="#a6a6a6" />

</ResourceDictionary>